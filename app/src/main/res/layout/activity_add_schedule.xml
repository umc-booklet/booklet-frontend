<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScheduleActivity" >

    <ImageButton
        android:id="@+id/btnCloseAddSchedule"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_close_activity"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddComplete"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="#0075FF"
        android:background="?attr/selectableItemBackground"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/headerGrey"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editScheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="제목"
        android:textSize="20sp"
        android:singleLine="true"
        android:maxLength="10"
        android:background="@android:color/transparent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <LinearLayout
        android:id="@+id/scrollEventColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/btnSelectColor"
        app:layout_constraintBottom_toBottomOf="@+id/btnSelectColor"
        app:layout_constraintEnd_toStartOf="@+id/btnSelectColor">

        <ImageButton
            android:id="@+id/btnColorPink"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/event_color_pink"/>

        <ImageButton
            android:id="@+id/btnColorGreen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/event_color_green"/>

        <ImageButton
            android:id="@+id/btnColorPurple"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/event_color_purple" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnSelectColor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/event_color_pink"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddComplete"
        app:layout_constraintBottom_toBottomOf="@+id/editScheduleTitle" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/headerGrey"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageClock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_clock"
        android:scaleType="fitXY"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintEnd_toStartOf="@+id/textAllDay"/>

    <TextView
        android:id="@+id/textAllDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루종일"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageClock"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintBottom_toBottomOf="@+id/imageClock"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchAllDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:theme="@style/SwitchTheme"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAllDay"
        app:layout_constraintBottom_toBottomOf="@+id/textAllDay" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="12월 13일 (목)"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageClock" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="오전 8:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/startDate"
        app:layout_constraintEnd_toEndOf="@+id/startDate"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow"
        app:layout_constraintStart_toEndOf="@+id/startDate"
        app:layout_constraintEnd_toStartOf="@+id/endDate"
        app:layout_constraintTop_toTopOf="@+id/startDate"
        app:layout_constraintBottom_toBottomOf="@+id/startDate" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="1월 18일 (수)"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchAllDay" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="오전 8:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/endDate"
        app:layout_constraintEnd_toEndOf="@+id/endDate"
        app:layout_constraintTop_toBottomOf="@+id/endDate"/>

    <ImageButton
        android:id="@+id/btnGoPrevious"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_gopreviousmonth"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintTop_toTopOf="@+id/btnGoNext"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoNext"
        app:layout_constraintEnd_toStartOf="@+id/scheduleTitleContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scheduleTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/startDate"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/scheduleYearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="2019"
            app:layout_constraintTop_toTopOf="@id/yearKorean"
            app:layout_constraintBottom_toBottomOf="@id/yearKorean"
            app:layout_constraintEnd_toStartOf="@+id/yearKorean"/>

        <TextView
            android:id="@+id/yearKorean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="년"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scheduleYearText" />

        <TextView
            android:id="@+id/scheduleMonthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            tools:text="3월"
            app:layout_constraintTop_toTopOf="@id/yearKorean"
            app:layout_constraintStart_toEndOf="@+id/yearKorean"
            app:layout_constraintBottom_toBottomOf="@id/yearKorean"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnGoNext"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_gonextmonth"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@+id/scheduleTitleContainer"
        app:layout_constraintBottom_toBottomOf="@+id/scheduleTitleContainer"
        app:layout_constraintStart_toEndOf="@+id/scheduleTitleContainer"/>

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/scheduleCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cv_dayViewResource="@layout/calendar_add_event_layout"
        app:cv_monthHeaderResource="@layout/calendar_add_event_container"
        app:cv_daySize="square"
        app:cv_outDateStyle="endOfRow"
        app:cv_scrollPaged="true"
        app:layout_constraintTop_toBottomOf="@+id/scheduleTitleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/headerGrey"
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/scheduleCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>