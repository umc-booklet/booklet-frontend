<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="21dp">


    <ImageView
        android:id="@+id/iv_dayCalender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_calender"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_dayScheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:text="10:30"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/dayScheduleRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/day_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dayScheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="9dp"
        android:text="여행"
        android:textColor="@color/lepurple"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tv_dayScheduleTitle"
        app:layout_constraintTop_toBottomOf="@id/tv_dayScheduleTitle">

        <TextView
            android:id="@+id/tv_startDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_bar0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            android:text="일 " />

        <TextView
            android:id="@+id/tv_bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="오전/오후" />

        <TextView
            android:id="@+id/tv_startHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            android:text=":" />

        <TextView
            android:id="@+id/tv_startMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_bar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            android:text=" - " />

        <TextView
            android:id="@+id/tv_endDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="13" />

        <TextView
            android:id="@+id/tv_bar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            android:text="일 " />

        <TextView
            android:id="@+id/tv_bar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="오전/오후" />

        <TextView
            android:id="@+id/tv_endHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_bar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            android:text=":" />

        <TextView
            android:id="@+id/tv_endMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#868686"
            tools:text="12" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>