<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="person"
            type="com.eunjeong.booklet.datas.Friend" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fr_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/dog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fr_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.16"/>

        <TextView
            android:id="@+id/fr_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:text="@{person.name}"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            tools:text="이름"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fr_addbtn"
            app:layout_constraintStart_toEndOf="@+id/fr_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.7"/>

        <ImageButton
            android:id="@+id/fr_addbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="39dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:src="@drawable/ic_outline_person_add_24"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/fr_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.16"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>